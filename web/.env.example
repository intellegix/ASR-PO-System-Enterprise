# ASR Purchase Order System - Environment Configuration Template
# Copy this file to .env.local and fill in your values

# ============================================================================
# DATABASE CONFIGURATION (Required)
# ============================================================================
# PostgreSQL connection string from your Render database
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://po_admin:YOUR_PASSWORD@dpg-XXXXX-a.oregon-postgres.render.com:5432/po_system"

# ============================================================================
# AUTHENTICATION CONFIGURATION (Required)
# ============================================================================
# Generate with: openssl rand -hex 32
NEXTAUTH_SECRET="your-32-character-secret-key-here-generated-with-openssl"

# Local backend URL for development
NEXTAUTH_URL="http://localhost:3000"

# JWT secrets for custom authentication (generate with: openssl rand -hex 32)
JWT_SECRET="your-jwt-secret-here-32-characters-minimum"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-here-32-characters-minimum"

# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
# Environment mode
NODE_ENV="development"

# Frontend static site URL (for CORS)
FRONTEND_URL="https://asr-po-system-frontend.onrender.com"

# API URL for frontend (local backend)
NEXT_PUBLIC_API_URL="http://localhost:3000"

# ============================================================================
# QUICKBOOKS INTEGRATION (Future Phase)
# ============================================================================
QB_CLIENT_ID=your-quickbooks-app-client-id
QB_CLIENT_SECRET=your-quickbooks-app-client-secret
QB_REDIRECT_URI=http://localhost:3000/api/quickbooks/auth/callback
QB_ENVIRONMENT=sandbox
# QB_ENVIRONMENT options: sandbox | production

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================
# Logging level
LOG_LEVEL="INFO"

# Debug mode
DEBUG="false"

# Email Configuration (for production notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_PASS=your-app-password

# ============================================================================
# DEPLOYMENT NOTES
# ============================================================================
# For hybrid architecture:
# 1. Frontend: Static site deployed on Render
# 2. Backend: Runs locally, connects to Render PostgreSQL
# 3. Database: Managed PostgreSQL on Render ($7/month)
#
# To generate secure secrets:
# openssl rand -hex 32
#
# To test database connection:
# psql "postgresql://username:password@host:port/database" -c "SELECT version();"