# ASR Purchase Order System - Production Environment Configuration
# Phase 4D - Deployment Setup
#
# IMPORTANT: This file contains production environment variables.
# Never commit actual secrets to version control.
# Use your deployment platform's environment variable management.

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000

# Redis Configuration (Production Caching)
REDIS_URL="redis://username:password@host:port"
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# Authentication & Security
NEXTAUTH_URL="https://your-production-domain.com"
NEXTAUTH_SECRET="your-super-secure-secret-key-32-characters-minimum"
JWT_SECRET="your-jwt-secret-key-32-characters-minimum"

# QuickBooks Integration
QUICKBOOKS_CLIENT_ID="your-qb-production-client-id"
QUICKBOOKS_CLIENT_SECRET="your-qb-production-client-secret"
QUICKBOOKS_REDIRECT_URI="https://your-production-domain.com/api/quickbooks/callback"
QUICKBOOKS_SANDBOX="false"
QUICKBOOKS_BASE_URL="https://sandbox-quickbooks.api.intuit.com"

# Email Configuration (Production SMTP)
SMTP_HOST="smtp.yourmailprovider.com"
SMTP_PORT=587
SMTP_SECURE="false"
SMTP_USER="your-email@yourdomain.com"
SMTP_PASSWORD="your-email-password"
SMTP_FROM="ASR Purchase Order System <noreply@yourdomain.com>"

# Export Service Configuration
PDF_EXPORT_TIMEOUT=30000
PDF_EXPORT_MAX_CONCURRENT=3
EXCEL_EXPORT_MAX_ROWS=10000
EXPORT_TEMP_DIR="/tmp/exports"
EXPORT_MAX_FILE_SIZE=52428800

# Performance & Monitoring
NODE_ENV="production"
LOG_LEVEL="info"
PERFORMANCE_MONITORING_ENABLED="true"
CACHE_ENABLED="true"
CACHE_TTL_DEFAULT=300000

# Rate Limiting (Production Values)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS="true"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="pdf,xlsx,csv,jpg,png"
UPLOAD_DIR="/tmp/uploads"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="your-backup-bucket"
BACKUP_S3_REGION="us-west-2"

# External Monitoring
UPTIME_MONITORING_ENABLED="true"
HEALTH_CHECK_INTERVAL=30000
MONITORING_WEBHOOK_URL="your-monitoring-webhook-url"

# Feature Flags
ENABLE_ADVANCED_REPORTS="true"
ENABLE_BULK_OPERATIONS="true"
ENABLE_AUDIT_LOGGING="true"
ENABLE_PERFORMANCE_PROFILING="false"

# Content Security Policy
CSP_ENABLED="true"
CSP_REPORT_ONLY="false"

# CORS Configuration
CORS_ORIGIN="https://your-production-domain.com"
CORS_CREDENTIALS="true"

# Session Configuration
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600

# Deployment Information
DEPLOYMENT_ENVIRONMENT="production"
BUILD_VERSION="1.0.0"
DEPLOYMENT_DATE="2024-01-12"
DEPLOYMENT_COMMIT_SHA="to-be-set-by-ci"